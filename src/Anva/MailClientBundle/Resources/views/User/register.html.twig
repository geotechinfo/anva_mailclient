{# src/Acme/SecurityBundle/Resources/views/Security/register.html.twig #}
<h1>[Register]</h1>
<form action="{{ path('doregister') }}" method="post">
	<input type="hidden" name="id" value="{{ dataset.id }}"/>
    <table cellpadding="10" cellspacing="10">
		<tr>
			<td>First Name</td>
			<td><input type="text" id="firstname" name="firstname" value="" /></td>
		</tr>
		<tr>
			<td>Last Name</td>
			<td><input type="text" id="lastname" name="lastname" value="" /></td>
		</tr>
		<tr>
			<td>Username</td>
			<td><input type="text" id="username" name="username" value="" /></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><input type="text" id="password" name="password" value="" /></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><input type="submit" name="register" /></td>
		</tr>
	</table>
</form>